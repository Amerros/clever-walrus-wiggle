{
  "compilerOptions": {
    "lib": ["deno.ns", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowArbitraryExtensions": true,
    "moduleResolution": "bundler"
  },
  "include": ["./**/*.ts"]
}